{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "battleproof",
  "version": "0.1.0",
  "identifier": "kr.entropi.battleproof",
  "build": {
    "frontendDist": "../app/dist",
    "devUrl": "http://localhost:1420/",
    "beforeDevCommand": "trunk serve --config ../Trunk.toml",
    "beforeBuildCommand": "trunk build --config ../Trunk.toml"
  },
  "app": {
    "windows": [
      {
        "title": "Battleproof",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
